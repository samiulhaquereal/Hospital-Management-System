<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/login"
    tools:context=".signup">


    <EditText
        android:layout_marginTop="250sp"
        android:id="@+id/nameEdiTTextIdsignup"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="12dp"
        android:background="@drawable/boarder_edittext"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:textColor="@color/white"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <EditText
        android:layout_marginTop="16sp"
        android:id="@+id/emailEdiTTextIdsignup"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="12dp"
        android:background="@drawable/boarder_edittext"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:textSize="14sp" />


    <EditText
        android:layout_marginTop="16sp"
        android:id="@+id/phoneEdiTTextIdsignup"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:ems="10"
        android:textColor="@color/white"
        android:inputType="number"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="12dp"
        android:background="@drawable/boarder_edittext"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:hint="Phone Number"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <EditText

        android:id="@+id/passwordEdiTTextIdsignup"
        android:layout_marginTop="16sp"
        android:layout_width="320sp"
        android:layout_height="60sp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="12dp"
        android:background="@drawable/boarder_edittext"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/submitsignupbtn"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:text="Sign up"
            android:textSize="15sp" />
        <Button
            android:id="@+id/loginbtnsignup"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:text="Log in"
            android:textSize="15sp"
            android:layout_marginLeft="50sp"
            />





    </LinearLayout>



</LinearLayout>